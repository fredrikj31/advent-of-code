{
  "compilerOptions": {
    "outDir": "./build",
    "module": "nodenext",
    "target": "es2022",
    "types": ["@types/node", "@types/jest"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "exclude": ["build"],
  "include": ["src/**/*", "scripts/**/*"]
}
