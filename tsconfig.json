{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "build"
  },
  "exclude": ["build"],
  "include": ["src/**/*", "scripts/**/*"]
}
